@model CRUD_Estudiantes.Models.Estudiante
@{
    ViewData["Title"] = Model != null && Model.Id > 0 ? "Editar Estudiante" : "Registrar Estudiante";
    var action = Model != null && Model.Id > 0 ? "Edit" : "Register";
}

<a class="btn btn-outline-success col-2" asp-controller="Home" asp-action="index">Regresar al Panel</a>
<div class="container w-100 mt-5 d-flex flex-column">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <form asp-action="@action" method="post" class="d-flex mx-auto flex-column gap-3 w-50">
        <!-- Campo oculto para incluir el Id en caso de edición -->
        @if (Model.Id > 0 && Model.Id != null)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" id="nombre" required>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Edad"></label>
            <input asp-for="Edad" type="number" class="form-control" id="edad" required>
            <span asp-validation-for="Edad" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">
            @(Model.Id > 0 ? "Actualizar" : "Registrar")
        </button>
    </form>
</div>